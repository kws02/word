<table cellpadding="0" cellspacing="0" width="100%">
    <tr>
        <th width="15%">ID</th>
        <td width="85%">@Html.TextBox("ID", "", new {style="width:50%;text-transform:lowercase", onkeyup="$(this).val($(this).val().toLowerCase());"})</td>
    </tr>
    <tr>
        <th>PW</th>
        <td>@Html.Password("PW", "", new {style="width:50%", onkeypress="if(event.keyCode==13)loginOK();"})</td>
    </tr>
    <tr>
        <td colspan="2" align="right">
            <input type="button" value="SUBMIT" onclick="loginOK()" style="border: 1px solid #979797;" />
        </td>
    </tr>
</table>
<script>
    function loginOK()
    {
        $.ajax({
            type: "POST",
            dataType: "text",
            data: {
                "ID": $("#ID").val(),
                "PW": $("#PW").val()
            },
            async: false,
            url: "/Home/LoginOK",
            success: function (data)
            {
                if (data == "0")
                    alert("아이디와 비밀번호를 다시 확인해주세요");
                else
                    location.href = "/Home/Main";
            }
        });    
    }
</script>